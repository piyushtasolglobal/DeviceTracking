<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".AddOwnDevicesScreens">
    <androidx.appcompat.widget.Toolbar
        android:background="@color/purple_500"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.AppCompatImageView
            android:visibility="gone"
            android:src="@drawable/ic_baseline_arrow_back_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="Add another device"
            android:textStyle="bold"
            android:textSize="16dp"
            android:layout_marginLeft="30dp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:visibility="gone"
            android:id="@+id/mydevice"
            android:layout_gravity="end"
            android:textStyle="bold"
            android:text="My Device"
            android:layout_marginRight="10dp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/exit_app"
            android:visibility="visible"
            android:layout_gravity="end"
            android:textStyle="bold"
            android:text="Logout"
            android:layout_marginRight="10dp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">



    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">
            <androidx.appcompat.widget.AppCompatTextView
                android:text=" Select Device Type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/device_type"
                android:layout_height="48dp"
                android:layout_marginTop="5dp"
                android:inputType="text"
                android:textColorHint="@color/gray"
                android:paddingStart="10dp"
                android:hint="Device Type"
                android:layout_width="match_parent"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">
            <androidx.appcompat.widget.AppCompatTextView
                android:text=" Brand Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/brand_name"
                android:layout_height="48dp"
                android:layout_marginTop="5dp"
                android:inputType="text"
                android:textColorHint="@color/gray"
                android:paddingStart="10dp"
                android:hint="Model Name"
                android:layout_width="match_parent"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">
            <androidx.appcompat.widget.AppCompatTextView
                android:text=" Model Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/model_name"
                android:layout_height="48dp"
                android:layout_marginTop="5dp"
                android:inputType="text"
                android:textColorHint="@color/gray"
                android:paddingStart="10dp"
                android:hint="Model Name"
                android:layout_width="match_parent"/>

        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">
            <androidx.appcompat.widget.AppCompatTextView
                android:text=" Mobile Status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/mobile_status"
                android:layout_height="48dp"
                android:layout_marginTop="5dp"
                android:inputType="text"
                android:textColorHint="@color/gray"
                android:paddingStart="10dp"
                android:hint="Model Name"
                android:layout_width="match_parent"/>

        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/ly_serial_number"
            android:visibility="gone"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatTextView
                android:text="Enter Serial Number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/serial_numner"
                android:layout_height="48dp"
                android:layout_marginTop="5dp"
                android:inputType="textCapCharacters"
                android:textColorHint="@color/gray"
                android:paddingStart="10dp"
                android:background="@drawable/editdrawable"
                android:hint="E.g android &amp; iOS"
                android:layout_width="match_parent"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/ly_add_device"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">
                <androidx.appcompat.widget.AppCompatTextView
                    android:text="Device IMEA number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/imei_number"
                    android:layout_height="48dp"
                    android:maxLength="15"
                    android:layout_marginTop="5dp"
                    android:digits="1234567890"
                    android:textAllCaps="true"
                    android:inputType="number"
                    android:textColorHint="@color/gray"
                    android:paddingStart="10dp"
                    android:background="@drawable/editdrawable"
                    android:hint="E.g 1234...15"
                    android:layout_width="match_parent"/>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">
                <androidx.appcompat.widget.AppCompatTextView
                    android:text="Sim number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/sim_number"
                    android:layout_height="48dp"
                    android:layout_marginTop="5dp"
                    android:digits="1234567890"
                    android:inputType="number"
                    android:textAllCaps="true"
                    android:maxLength="15"
                    android:textColorHint="@color/gray"
                    android:paddingStart="10dp"
                    android:background="@drawable/editdrawable"
                    android:hint="E.g 1234...15"
                    android:layout_width="match_parent"/>

            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">
                <androidx.appcompat.widget.AppCompatTextView
                    android:text=" Operation system and version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/operating_system"
                    android:layout_height="48dp"
                    android:layout_marginTop="5dp"
                    android:inputType="textCapCharacters"
                    android:textColorHint="@color/gray"
                    android:paddingStart="10dp"
                    android:background="@drawable/editdrawable"
                    android:hint="E.g android &amp; iOS"
                    android:layout_width="match_parent"/>

            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_margin="10dp"
                android:orientation="vertical">
                <androidx.appcompat.widget.AppCompatTextView
                    android:text=" Manufacture serial number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/mark_of_comp"
                    android:layout_height="48dp"
                    android:layout_marginTop="5dp"
                    android:inputType="textCapCharacters"
                    android:textColorHint="@color/gray"
                    android:paddingStart="10dp"
                    android:background="@drawable/editdrawable"
                    android:hint="E.g 123676"
                    android:layout_width="match_parent"/>

            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:visibility="gone"
                android:orientation="vertical">
                <androidx.appcompat.widget.AppCompatTextView
                    android:text=" Mark of compliance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/manu_serial_number"
                    android:layout_height="48dp"
                    android:layout_marginTop="5dp"
                    android:inputType="textCapCharacters"
                    android:textColorHint="@color/gray"
                    android:paddingStart="10dp"
                    android:background="@drawable/editdrawable"
                    android:hint="E.g 2015/2369"
                    android:layout_width="match_parent"/>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:visibility="gone"
                android:orientation="vertical">
                <androidx.appcompat.widget.AppCompatTextView
                    android:text="Date and Time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/date_time"
                    android:layout_height="48dp"
                    android:layout_marginTop="5dp"
                    android:drawableRight="@drawable/ic_baseline_watch_later_24"
                    android:inputType="none"
                    android:editable="false"
                    android:drawablePadding="10dp"
                    android:textColorHint="@color/gray"
                    android:paddingStart="10dp"
                    android:background="@drawable/editdrawable"
                    android:hint="Date and Time"
                    android:layout_width="match_parent"/>

            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:visibility="gone"
                android:orientation="vertical">
                <androidx.appcompat.widget.AppCompatTextView
                    android:text=" Email Id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/email_id"
                    android:layout_height="48dp"
                    android:layout_marginTop="5dp"
                    android:inputType="textCapCharacters"
                    android:textColorHint="@color/gray"
                    android:paddingStart="10dp"
                    android:background="@drawable/editdrawable"
                    android:hint="Enter email"
                    android:layout_width="match_parent"/>

            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">
                <androidx.appcompat.widget.AppCompatTextView
                    android:text="Address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/gps_location"
                    android:layout_height="60dp"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="top|start"
                    android:gravity="top|start"
                    android:inputType="textMultiLine"
                    android:maxLines="2"
                    android:minLines="2"
                    android:textColorHint="@color/gray"
                    android:paddingStart="10dp"
                    android:background="@drawable/editdrawable"
                    android:hint="Full address"
                    android:layout_width="match_parent"/>

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/submit_add_device"
            android:layout_gravity="center"
            android:gravity="center"
            android:backgroundTint="@color/purple_700"
            android:background="@drawable/editdrawable"
            android:layout_width="match_parent"
            android:layout_margin="20dp"
            android:text="Submit"
            android:textColor="@color/white"
            android:layout_height="wrap_content"/>
    </androidx.appcompat.widget.LinearLayoutCompat>



    </ScrollView>



</androidx.appcompat.widget.LinearLayoutCompat>